generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum NewsCategory {
  OFICIAL
  REDES_SOCIALES
  NOTICIAS
}

enum NewsFlag {
  IMPORTANTE
  ACTUALIZACION
  URGENTE
  CAIDA_SISTEMA
}

model News {
  id           String        @id @default(cuid())
  title        String
  content      String        @db.Text
  source       String
  sourceUrl    String?
  category     NewsCategory
  published    Boolean       @default(false)
  flags        NewsFlag[]    @default([])

  publishedAt  DateTime?
  scrapedAt    DateTime      @default(now())
  originalDate DateTime

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([published, originalDate(sort: Desc)])
  @@index([category])
}

model EmailSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  @@index([email])
}

model Admin {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  createdAt    DateTime @default(now())
}

model ScraperRun {
  id           String    @id @default(cuid())
  scraperName  String
  status       String
  itemsScraped Int       @default(0)
  errorMessage String?   @db.Text
  startedAt    DateTime  @default(now())
  completedAt  DateTime?

  @@index([scraperName, startedAt(sort: Desc)])
}
